          cantidad.value = cantidadProducto;
          precio.value = precioProducto;
          descripcion.value = descripcionProducto;
          rutaImagenVieja.value = pathProducto;

          const tallasSeleccionadas = tallaProducto.split(',');

          const tallasRadio = document.getElementsByName("talla[]");

