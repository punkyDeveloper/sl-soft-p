<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta id="viewport" content="width=device-width, initial-scale=1.0">
  <link href="../../static/img/logo/sl-soft.ico" rel="shortcut icon">
  <title>Compra</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

</head>

<body onload="datosCarrito(), alertaCarrito()">

  <% if (rol===null) { %>
    <%- include('../partials/nav') %>
  <% } else if (rol==="cliente" ) { %>
    <%- include('../partials/navUsuario2') %>
  <% } %> 
  
  <section class="mb-5">
    <div class="row">
      <div class="col-md-12">
        <div class="border-bottom mb-8">
          <h1 class="text-center mt-3">Lista de productos</h1>
        </div>
        <div class="row mx-3 ">
          <div id="productosCompra" class="col-md-7  my-2">

          </div>
          <div id="datos" class=" d-flex align-items-end col-md-4 m-3 ">            
            <div class="flex-fill">
              <div class="text-center mb-5">
                <img src="../../static/img/logo/logo.png" alt="" style="width: 200px;">
              </div>
              <div class="border p-3">

                <div class="border-bottom m-3 text-center">
                  <h5>Total compra</h5>
                </div>
                <div id="subtotalCompra" class="border-bottom d-flex align-items-center justify-content-between text-center mt-2">
  
                </div>
                <div id="envioCompra" class="border-bottom d-flex align-items-center justify-content-between text-center mt-2">
  
                </div>
                <div class="border-bottom d-flex align-items-center justify-content-between text-center mt-2">
                  <p>Descuentos</p>
                  <p class="text-success">0%</p>
                </div>
                <div id="totalPago" class="border-bottom d-flex align-items-center justify-content-between text-center mt-2">
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="row">
      <div class="col-md-12">
        <div class="border-bottom mb-8">
          <h1 class="text-center mt-3">Datos personales</h1>
        </div>
        <% misDatos.forEach(elemento => {%>
          <div class="row m-5">
            <div class="col-md-6">
              <form action="/v1/realizarPago" method="post">
                <div class="form-group ">
                  <label for="nombre" class="form-label mt-2">NOMBRE</label>
                  <input type="text" class="form-control" id="nombreCliente" readonly value="<%=elemento.nombre%>">
  
                  <label for="apellido" class="form-label mt-2">APELLIDO</label>
                  <input type="text" class="form-control" id="apellidoCliente" readonly value="<%=elemento.apellido%>">
  
                  <label for="documento" class="form-label mt-2">DOCUMENTO</label>
                  <input type="number" class="form-control" id="documentoCliente" readonly value="<%=elemento.documento%>">
  
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="celular" class="form-label mt-2">CELULAR</label>
                  <input type="number" class="form-control" id="celularCliente" readonly  value="<%=elemento.celular%>">
  
                  <label for="email" class="form-label mt-2">CORREO</label>
                  <input type="email" class="form-control" id="emailCliente" readonly value="<%=elemento.email%>">
  
                  <label for="direccion" class="form-label mt-2">DIRECCIÃ“N</label>
                  <input type="text" class="form-control" id="direccionCliente" readonly value="<%=elemento.direccion%>">
                  <input type="number" id="valorPago" name="total" hidden>
                </div>
              </div>
              <div class="form-group text-center ">
                <input type="submit" class="btn btn-dark px-5 mt-5 " value="Comprar">
              </div>
            </form>
          </div>
        <%});%>
      </div>
  </div>
  </section>



  <%- include('../partials/footer') %>

  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
</body>

</html>