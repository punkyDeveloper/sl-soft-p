  <!--albun-->
  <section>
    <div class="album py-5 bg-light " id="catalogo">

      <div class="text-center ">
        <div class="titulo">
          <h4>Inspírate con nuestras tendencias </h4>
          <h4>y crea tu propio estilo.</h4>
        </div>
      </div> 

      <div class="card-group m-5 ">
        <div class="card m-2">
          <img src="../../static/img/catalogo/mujer.jpg" class="card-img-top img" alt="...">
          <div class="iniciotext">
            <div class="col-lg-10" style="float:none; margin:0 auto;">
              <a href="/v1/sl-catalogo" class="text-decoration-none"><h3 class="title2">MUJER</h3></a>
              
            </div>
            <div class="col-xs-12 explore">
              <a href="/v1/sl-catalogo"><button type="button" class="btn btn-success" data-toggle="modal" data-target="#r">Ver mas</button></a>
